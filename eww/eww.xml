<eww>
	<!--
	<includes>
		Put your <file>'s in here
	</includes>
	-->

	<definitions>
		<def name="player">
			<box orientation="v">
				<box>
					<box class="musicArt" style="background-image: url('{{art}}'">{{refreshCover}}</box>
					<box orientation="v">
						<box>{{artistAndTitle}}</box>
						<box>from {{album}}</box>
					</box>
				</box>
				<box>
					<button onlclick="playerctl previous"></button>
					<button onlclick="playerctl play-pause">{{musicStatus}}</button>
					<button onlclick="playerctl next"></button>
				</box>
			</box>
		</def>
	</definitions>

	<variables>
		<script-var name="art">
			 art
		</script-var>
		<script-var name="artistAndTitle">
			playerctl metadata --format "{{ artist }} - {{ title }}"
		</script-var>
		<script-var name="album">
			playerctl metadata --format "{{ album }}"
		</script-var>
		<script-var name="musicStatus">
			case $(playerctl status) in

				Playing)
					echo -n ""
				;;
				

				*)
					echo -n ""
				;;
			esac
		</script-var>
	</variables>

	<windows>
		<window name="player" stacking="fg" focusable="false" screen="0">
			<geometry anchor="top center" x="0px" y="30px"/>
			<widget>
				<player/>
			</widget>
		</window>
	</windows>
</eww>
